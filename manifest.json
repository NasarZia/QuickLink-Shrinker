{
  "manifest_version": 3,
  "name": "TinyURL Shortener Extension",
  "version": "1.0",
  "description": "Shorten URLs using TinyURL and copy them to the clipboard.",
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "permissions": [
    "tabs",
    "clipboardWrite",
    "storage"
  ],
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
